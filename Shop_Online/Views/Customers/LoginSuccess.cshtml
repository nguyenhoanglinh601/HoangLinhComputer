    ViewData["Title"] = "Đăng nhập thành công - ";
    ViewData["Description"] = "Đăng nhập thành công vào hệ thống Hoàng Linh Computer.";
    ViewData["Keyworks"] = "dang nhap hoang linh computer";
    ViewData["Author"] = "Đăng nhập thành công";
    ViewData["Og-Title"] = "Đăng nhập thành công";
    ViewData["Og-Description"] = "Đăng nhập thành công vào hệ thống Hoàng Linh Computer.";
    ViewData["Og-Url"] = "https://localhost:44386/Customers/Login";
    ViewData["Og-Image"] = "/Images/logo.png";
    ViewData["Img-Src"] = "/Images/logo.png";
    ViewData["Dc-Title"] = "Đăng nhập thành công";
    ViewData["Dc-Identifier"] = "";
