<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<div class="container-fluid bg-light border">
    <div class="row bg-white border">
        <div class="col-lg-8 mb-md-0 mb-2">
            <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Images/carousel-1.png" alt="HoangLinh Coputer - Laptop chính hãng, giá rẻ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/carousel-3.png" alt="Máy tính Hoàng Linh - Phụ kiện chính hãng, giá rẻ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/carousel-4.png" alt="Hoàng Linh Computer - Linh kiện chính hãng, giá rẻ">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev" title="Hoàng Linh Computer">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next" title="Hoàng Linh Computer">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row border rounded mb-2 highlight-product-1 py-lg-0 py-2">
                <div class="col-lg-4 px-0 align-self-center text-center">
                    <img class="img-fluid thumbnail" src="https://drive.google.com/file/d/15s9JFqWCnMwd9unwJiQ70FwXQUxbVDhN/view?usp=sharing" alt="Laptop Hoàng Linh" />
                </div>
                <div class="col-lg-8 align-self-center">
                    <p class="p-title m-0 text-center">Laptop Lenovo IdeaPad 14</p>
                    <div class="text-center d-price border rounded">
                        <p class="m-0">Giá chỉ còn: <del>22.590.000đ</del></p>
                        <p class="m-0"><strong>19.890.000đ</strong></p>
                    </div>
                </div>
            </div>
            <div class="row border rounded mb-2 highlight-product-2 py-lg-0 py-2">
                <div class="col-lg-4 px-0 align-self-center text-center">
                    <img class="img-fluid thumbnail" src="https://drive.google.com/file/d/1JcnWNFgfXio7vdLHdhsN3_M2psiEz5gy/view?usp=sharing" alt="Ghế gaming Hoàng Linh" />
                </div>
                <div class="col-lg-8 align-self-center">
                    <p class="p-title m-0 text-center">Ghế gaming MSI MAG 2021</p>
                    <div class="text-center d-price border rounded">
                        <p class="m-0">Giá chỉ còn: <del>2.900.000đ</del></p>
                        <p class="m-0"><strong>2.350.000đ</strong></p>
                    </div>
                </div>
            </div>
            <div class="row border rounded highlight-product-3 py-lg-0 py-2">
                <div class="col-lg-4 px-0 align-self-center text-center">
                    <img class="img-fluid thumbnail" src="https://drive.google.com/file/d/1d7TCvTxRykWSrLCPgwU8f3gOefN9Yt9Y/view?usp=sharing" alt="Màn hình máy tính Hoàng Linh" />
                </div>
                <div class="col-lg-8 align-self-center">
                    <p class="p-title m-0 text-center">Màn hình LG 4k Ultra HD</p>
                    <div class="text-center d-price border rounded">
                        <p class="m-0">Giá chỉ còn: <del>19.230.000đ</del></p>
                        <p class="m-0"><strong>17.500.000đ</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container my-2 d-product">
        <div class="row my-3 bg-white">
            <div class="d-title w-100 d-flex justify-content-between px-2 pt-md-2 pt-1">
                <h1>Sản phẩm nổi bật</h1>
                <a class="d-md-block d-none" title="Xem tất cả">
                    <small>
                        Xem tất cả <i class="fas fa-angle-double-right"></i>
                    </small>
                </a>
            </div>
            <hr class="w-100 mt-0" />
            @for (var i = 0; i < Model.Count(); i++)
            {
                <div class="col-lg-3 col-md-4 my-3 text-center">
                    <a href="/products/detail?p=@Model[i].url" title="@Model[i].product_info.Product_Name">

                        <img class="img-fluid thumbnail fix-image" src="@Model[i].thumbnail" alt="@Model[i].product_info.Product_Name" />
                        <p class="text-center m-0 text-secondary product_name">
                            @Html.DisplayFor(modelItem => Model[i].product_info.Product_Name)
                        </p>
                        <p class="text-center m-0">
                            <del>
                                <small class="product_discount_price">
                                    @Html.DisplayFor(modelItem => Model[i].product_info.price)
                                </small>
                            </del>
                        </p>
                        <p class="text-center text-danger m-0">
                            <strong class="product_price">
                                @Html.DisplayFor(modelItem => Model[i].product_info.price)
                            </strong>
                        </p>

                    </a>
                </div>
                @if (i == 7) break;
            }
        </div>
        <div class="row my-3 bg-white">
            <div class="d-title w-100 d-flex justify-content-between px-2 pt-md-2 pt-1">
                <h1>Dành cho bạn</h1>
                <a class="d-md-block d-none" title="Xem tất cả">
                    <small>
                        Xem tất cả <i class="fas fa-angle-double-right"></i>
                    </small>
                </a>
            </div>
            <hr class="w-100 mt-0" />
            @for (var i = 8; i < Model.Count(); i++)
            {
                <div class="col-lg-3 col-md-4 my-3 text-center">
                    <a href="/products/detail?p=@Model[i].url" title="@Model[i].product_info.Product_Name">

                        <img class="img-fluid thumbnail fix-image" src="@Model[i].thumbnail" alt="@Model[i].product_info.Product_Name" />
                        <p class="text-center m-0 text-secondary product_name">
                            @Html.DisplayFor(modelItem => Model[i].product_info.Product_Name)
                        </p>
                        <p class="text-center m-0">
                            <del>
                                <small class="product_discount_price">
                                    @Html.DisplayFor(modelItem => Model[i].product_info.price)
                                </small>
                            </del>
                        </p>
                        <p class="text-center text-danger m-0">
                            <strong class="product_price">
                                @Html.DisplayFor(modelItem => Model[i].product_info.price)
                            </strong>
                        </p>
                    </a>
                </div>
            }
        </div>

    </div>
</div>
