    ViewData["Img-Src"] = @Model.product.productImages[0].Image;
    ViewData["Dc-Title"] = "Phân phối, cung cấp " + Model.product.product.Product_Name + " chính hãng, giá rẻ";

    //SỬA SAU
    ViewData["Dc-Identifier"] = "https://localhost:44386/products/detail?p=" + Model.product.url;
