    ViewData["Keyworks"] = Model.product.product.Product_Name;
    ViewData["Author"] = Model.product.product.Product_Name;
    ViewData["Og-Title"] = "Phân phối, cung cấp " + Model.product.product.Product_Name + " chính hãng, giá rẻ.";
    ViewData["Og-Description"] = "Phân phối, cung cấp " + Model.product.product.Product_Name + " chính hãng," +
